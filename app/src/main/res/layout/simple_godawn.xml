<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="8dp"
    android:elevation="5dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFF7">

        <TextView
            android:id="@+id/simple_productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/alike_angular"
            android:text="Cocola 250 ml"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/simple_productPoriman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="পরিমাণ = "
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/simple_productName"
            app:layout_constraintTop_toBottomOf="@id/simple_productName" />

        <TextView
            android:id="@+id/simple_poriman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text=""
            android:textColor="#ff22"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/simple_productPoriman"
            app:layout_constraintTop_toBottomOf="@id/simple_productName" />


        <TextView
            android:id="@+id/simple_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text=" "
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/simple_productName"
            app:layout_constraintStart_toEndOf="@id/simple_poriman"

            />




        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/updateTime"
            android:text="last update : "
            android:textColor="#1C243A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/simple_godown_mot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/popUp_btn"
            android:layout_margin="2dp"
            android:src="@drawable/ic_baseline_more_vert_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/simple_productBuy"
            android:layout_marginTop="2dp"
            android:text="ক্রয় মূল্য = "
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/simple_productName"
            app:layout_constraintTop_toBottomOf="@id/simple_productPoriman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/simple_godown_kroy"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/simple_productBuy"
            app:layout_constraintTop_toBottomOf="@id/simple_productPoriman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/simple_productSell"
            android:layout_marginTop="5dp"
            android:layout_marginStart="12dp"
            android:text="মোট মূল্য = "
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/simple_godown_kroy"
            app:layout_constraintTop_toBottomOf="@id/simple_productPoriman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/simple_godown_mot"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/simple_productSell"
            app:layout_constraintTop_toBottomOf="@id/simple_productPoriman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>